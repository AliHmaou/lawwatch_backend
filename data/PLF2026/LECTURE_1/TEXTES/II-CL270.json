arde et contr\u0026#x00F4;le des personnes plac\u0026#x00E9;es sous main de justice du programme Administration p\u0026#x00E9;nitentiaire, dot\u0026#x00E9;e de 3,9 milliards d\u0026#x2019;euros.\u003C\/p\u003E","annexeExposeSommaire":{}}},"cycleDeVie":{"dateDepot":"2025-10-27","datePublication":"2025-10-28","soumisArticle40":"false","etatDesTraitements":{"etat":{"code":"DI","libelle":"Discut\u00e9"},"sousEtat":{"code":"DI","libelle":"Rejet\u00e9"}},"dateSort":"2025-10-29T15:16:48+01:00","sort":"Rejet\u00e9"},"representations":{"representation":{"nom":"PDF","typeMime":{"type":"application","subType":"PDF"},"statutRepresentation":{"verbatim":"true","canonique":"true","officielle":"true","transcription":"false","enregistrement":"false"},"repSource":{},"offset":{},"contenu":{"documentURI":"\/base\/AMANR5L17PO59051B1906P2D1N000270?format=pdf"},"dateDispoRepresentation":{}}},"seanceDiscussionRef":{},"article99":"false","loiReference":{"codeLoi":"101","divisionCodeLoi":"25 000 000"},"discussionCommune":{"idDiscussion":"33445","typePosition":"Milieu"},"discussionIdentique":{},"accordGouvernementDepotHorsDelai":"Sans objet"}